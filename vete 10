let
    // Step A: Read from named range "XRP_Tree_Array"
    Source = Excel.CurrentWorkbook(){[Name="XRP_Tree_Array"]}[Content],

    // Step B: Promote the first row to actual headers
    PromotedHeaders = Table.PromoteHeaders(Source),

    // Step C: If needed, rename columns. Example: "Dimension_Name" -> "Hierarchy Name".
    //         If your named range already has correct headers, skip or adjust below.
    Renamed = Table.RenameColumns(
        PromotedHeaders,
        {
            {"Dimension_Name", "Hierarchy Name"}  // only if you have a column Dimension_Name
        }
    ),

    // Step D: Convert Parent column to Text, in case itâ€™s numeric/blank in the sheet
    ParentAsText = Table.TransformColumnTypes(
        Renamed,
        {{"Parent", type text}}
    ),

    // Step E: Add a Key column, forcing text conversion for both [Hierarchy Name] and [Value]
    WithKey = Table.AddColumn(
        ParentAsText,
        "KEY",
        each Text.From([Hierarchy Name]) & " | " & Text.From([Value]),
        type text
    ),

    // Step F: Mark the entire table as Type = "Tree"
    WithType = Table.AddColumn(
        WithKey,
        "Type",
        each "Tree",
        type text
    )
in
    WithType
